{
  "Routes": [
    //Book API -- https://localhost:5001
    //GET, POST
    {
      "DownstreamPathTemplate": "/api/Books",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5001"
        }
      ],
      "UpstreamPathTemplate": "/Books",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": {
        "AutheticationProvideKey": "IdentityApiKey",
        "AllowedScopes": [ "bookAPI" ]
      }
    },
    //GET, PUT, DELETE
    {
      "DownstreamPathTemplate": "/api/Books/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5001"
        }
      ],
      "UpstreamPathTemplate": "/Books/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AutheticationProvideKey": "IdentityApiKey",
        "AllowedScopes": [ "bookAPI" ]
      }
    },
    //UserManager API https://localhost:5041
    //GET, POST
    {
      "DownstreamPathTemplate": "/api/Users",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5041"
        }
      ],
      "UpstreamPathTemplate": "/Users",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": {
        "AutheticationProvideKey": "IdentityApiKey",
        "AllowedScopes": [ "userManagerAPI" ]
      }
    },
    //GET, PUT, DELETE
    {
      "DownstreamPathTemplate": "/api/Users/{username}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5041"
        }
      ],
      "UpstreamPathTemplate": "/Users/{username}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AutheticationProvideKey": "IdentityApiKey",
        "AllowedScopes": [ "userManagerAPI" ]
      }
    }
  ]
}
