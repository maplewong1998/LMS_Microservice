@using LMS.Client.Models

@model IEnumerable<BookIssueModel>
@{
    ViewData["Title"] = "Book Issuing";
    int i = 0;
}
<div id="bookissuing" class="container-fluid">
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-12 d-flex justify-content-center">
                                <h3>Issued Book List</h3>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                No.
                                            </th>
                                            <th>
                                                Issue id
                                            </th>
                                            <th>
                                                Email
                                            </th>
                                            <th>
                                                Book id
                                            </th>
                                            <th>
                                                Issue Date
                                            </th>
                                            <th>
                                                Due Date
                                            </th>
                                            <th>
                                                Issue Status
                                            </th>
                                            <th>
                                                Manage
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            foreach (var Data in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @(++i)
                                                    </td>
                                                    <td>
                                                        @Data.id
                                                    </td>
                                                    <td>
                                                        @Data.member_email
                                                    </td>
                                                    <td>
                                                        @Data.book_id
                                                    </td>
                                                    <td>
                                                        @Data.issue_date
                                                    </td>
                                                    <td>
                                                        @Data.due_date
                                                    </td>
                                                    <td>
                                                        @Data.issue_status
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@Data.id">Edit</a><br />
                                                        <a href="#">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".table").prepend($("<thead></thead>").append($(this).find("tr:first"))).dataTable();
    });
</script>